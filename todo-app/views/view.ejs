<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Records</title>
</head>
<body>
    <h1>View Records</h1>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
        <% records.forEach(record => { %>
        <tr>
            <td><%= record.id %></td>
            <td><%= record.name %></td>
            <td><%= record.phone %></td>
            <td>
                <!-- Delete Button -->
                <form action="/delete/<%= record.id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
                <!-- Edit Button -->
                <a href="/edit/<%= record.id %>">
                    <button>Edit</button>
                </a>
            </td>
        </tr>
        <% }); %>
    </table>
    <a href="/add">Add More Records</a>
</body>
</html>
