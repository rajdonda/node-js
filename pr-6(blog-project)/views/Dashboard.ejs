<%- include('Header') %>

<section id="blog" style="padding: 3rem; background: linear-gradient(135deg, #1e3c72, #2a5298); min-height: 100vh;">
    <% if (blogs.length === 0) { %>
        <h2 align="center" class="text-white fw-bold" style="margin-top: 3%; font-size: 2rem; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);">ðŸ“Œ No Blog Added on Dashboard</h2>
    <% } else { %>
        <h2 align="center" class="text-white fw-bold" style="margin-top: 3%; font-size: 2rem; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);">ðŸ“š Blog Repository</h2>
        
        <div class="container">
            <div class="row">
                <% blogs.map((blog) => { %>
                    <div class="d-flex">
                        <div class="blog-card shadow-lg border-0 d-flex flex-column" style="border-radius: 20px; overflow: hidden; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); transition: transform 0.3s;">
                            <div class="image" style="height: 200px; overflow: hidden; border-radius: 20px 20px 0 0;">
                                <img src="<%= blog?.image %>" alt="Blog image" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <div class="content p-4 d-flex flex-column flex-grow-1">
                                <h3 class="title text-white fw-bold" style="font-size: 1.5rem; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);">
                                    <%= blog?.title %>
                                </h3>
                                <p class="author text-light" style="font-style: italic; font-size: 0.9rem;">ðŸ‘¤ <%= blog?.author %></p>
                                <p class="description text-white" style="flex-grow: 1;">
                                    <%= blog?.description.slice(0, 90) %>...
                                </p>
                                <a href="/readmore?readmoreId=<%= blog?.id %>" class="read-more btn w-100" style="border-radius: 12px; font-weight: bold; background: linear-gradient(135deg, #ff7eb3, #ff758c); color: white; padding: 10px; box-shadow: 0 4px 10px rgba(255, 117, 140, 0.3); text-align: center; text-decoration: none;">ðŸ“– Read More</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</section>


    <%- include('Footer') %>

        <style>
            /* Blog Card Container */
            #blog {
    margin-top: 5%;
    padding: 2% 5%;
    background-color: #f9f9f9;
}

h2 {
    font-size: 2rem;
    color: #333;
    font-weight: bold;
}

.container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 30px;
}

.blog-posts {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.blog-card {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.blog-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
}

.image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-bottom: 1px solid #ddd;
}

.content {
    padding: 15px;
}

.title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
}

.author {
    font-size: 1rem;
    color: #777;
    margin-bottom: 15px;
}

.description {
    font-size: 1rem;
    color: #555;
    margin-bottom: 20px;
    line-height: 1.5;
}

.read-more {
    font-size: 1rem;
    color: #007bff;
    text-decoration: none;
    border: 2px solid #007bff;
    padding: 8px 15px;
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.read-more:hover {
    background-color: #007bff;
    color: #fff;
}

@media (max-width: 768px) {
    h2 {
        font-size: 1.5rem;
    }

    .container {
        grid-template-columns: 1fr;
    }

    .blog-card {
        margin-bottom: 20px;
    }
}


        </style>