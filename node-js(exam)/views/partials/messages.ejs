<% if(typeof errors != 'undefined'){ %>
    <% errors.forEach(function(error) { %>
        <div class="alert alert-info alert-dismissible fade show" role="alert" style="background-color: #87CEEB; border-color: #4682B4; color: #FFFFFF;">
            <%= error.msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% }); %>
<% } %>

<% if(success_msg != ''){ %>
    <div class="alert alert-dismissible fade show" role="alert" style="background-color: #ADD8E6; border-color: #4682B4; color: #000000;">
        <%= success_msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

<% if(error_msg != ''){ %>
    <div class="alert alert-dismissible fade show" role="alert" style="background-color: #6495ED; border-color: #4682B4; color: #FFFFFF;">
        <%= error_msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>