<%- include('Header') %>

<section id="blog" style="padding: 3rem; background: #333; min-height: 100vh; margin-top: 0;">
    <% if (blogs.length === 0) { %>
        <h2 align="center" class="text-white fw-bold" style="margin-top: 3%; font-size: 2rem; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);">
            ðŸ“Œ No Blog Posts Found
        </h2>
    <% } else { %>
        <h2 align="center" class="text-white fw-bold" style="margin-top: 3%; font-size: 2rem; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);">
            ðŸ“š Blog Posts Repository
        </h2>

        <div class="container">
            <div class="row">
                <% blogs.map((blog) => { %>
                    <div class=" d-flex col-md-4" style="width: 100%;">
                        <div class="blog-card shadow-lg border-0 d-flex flex-column h-100" style="border-radius: 12px; overflow: hidden; backdrop-filter: blur(15px); background: rgba(255, 255, 255, 0.1); box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); transition: transform 0.3s;">
                            <div class="image" style="height: 200px; overflow: hidden; border-radius: 12px 12px 0 0;">
                                <img src="<%= blog?.image %>" alt="Blog post image" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <div class="content p-4 d-flex flex-column flex-grow-1">
                                <h3 class="title text-white fw-bold" style="font-size: 1.5rem; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);">
                                    <%= blog?.title %>
                                </h3>
                                <p class="author text-light" style="font-style: italic; font-size: 0.9rem;">ðŸ‘¤ <%= blog?.author %></p>
                                <p class="description text-white flex-grow-1">
                                    <%= blog?.description.slice(0, 90) %>...
                                </p>
                                <a href="/readmore?readmoreId=<%= blog?.id %>" class="read-more btn w-100" style="border-radius: 8px; font-weight: bold; background: linear-gradient(135deg, #ff7eb3, #ff758c); color: white; padding: 10px; box-shadow: 0 4px 10px rgba(255, 117, 140, 0.3); text-align: center; text-decoration: none;">
                                     Read Full Post
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</section>

    <%- include('Footer') %>
