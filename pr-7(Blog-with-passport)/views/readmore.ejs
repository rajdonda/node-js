<%- include('Header') %>

<section class="py-5" style="background: linear-gradient(135deg, #1e3c72, #2a5298); min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div class="container">
        <div class="row align-items-center">
            <!-- Image Section -->
            <div class="col-lg-6 col-md-6 col-12 mb-4 d-flex justify-content-center">
                <% if (single && single.image) { %>
                    <img src="<%= single.image %>" alt="Image" class="rounded shadow-lg" 
                        style="max-width: 100%; border-radius: 20px; object-fit: cover; height: auto;">
                <% } else { %>
                    <p class="text-muted text-center">üö´ No image available</p>
                <% } %>
            </div>
            <!-- Content Section -->
            <div class="col-lg-6 col-md-6 col-12">
                <div class="p-4 shadow-lg" 
                    style="border-radius: 20px; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.1); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);">
                    
                    <h2 class="mb-3 text-white" style="font-size: 2rem;">
                        <strong>üìù Title:</strong> <%= single.title ? single.title : "No Title Available" %>
                    </h2>

                    <p class="text-white mb-4" style="font-size: 1.2rem;">
                        <strong>üìñ Description:</strong> <%= single.description ? single.description : "No Description Available" %>
                    </p>

                    <h5 class="mb-4 text-white" style="font-size: 1rem;">
                        <strong>üë§ Author:</strong> <%= single.author ? single.author : "Unknown Author" %>
                    </h5>

                    <!-- Buttons Section -->
                    <div class="d-flex flex-wrap gap-3">
                        <a href="/editBlog?editId=<%= single._id %>" 
                            class="btn shadow"
                            style="padding: 15px 40px; font-size: 1rem; font-weight: 600; background: linear-gradient(135deg, #4facfe, #00f2fe); border: none; color: white; border-radius: 12px; box-shadow: 0 4px 10px rgba(0, 242, 254, 0.3);">
                            ‚úèÔ∏è Edit
                        </a>
                        <a href="/deleteBlog?deletId=<%= single._id %>" 
                            class="btn shadow"
                            style="padding: 15px 40px; font-size: 1rem; font-weight: 600; background: linear-gradient(135deg, #ff758c, #ff7eb3); border: none; color: white; border-radius: 12px; box-shadow: 0 4px 10px rgba(255, 117, 140, 0.3);">
                            üóëÔ∏è Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('Footer') %>

<style>
/* General Styles */
body {
    font-family: 'Arial', sans-serif;
    background-color: #fff;
    color: #333;
}

h1, h5 {
    font-weight: bold;
}

p {
    line-height: 1.6;
}

/* Button Hover Effects */
.btn-primary:hover {
    background-color: #004085;
    color: #fff;
}

.btn-danger:hover {
    background-color: #c9302c;
    color: #fff;
}

.btn-secondary:hover {
    cursor: not-allowed;
}

/* Responsive Styles */
@media (max-width: 768px) {
    .row {
        flex-direction: column;
        align-items: center;
        text-align: left;
    }

    .col-12 {
        width: 100%;
        padding: 0 15px; /* Add padding to ensure content is not flush with edges */
    }

    .btns {
        flex-direction: column;
        align-items: stretch;
        width: 100%;
    }

    .btns a {
        margin-bottom: 10px;
        width: 100%; /* Buttons span the full width */
    }

    img {
        max-width: 100%; /* Ensure images scale properly */
        height: auto;
    }

    h2, p, h5 {
        text-align: left;
    }
}
</style>
