<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Records</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Records List</h2>
        <div class="text-end mb-3">
            <a href="/create" class="btn btn-primary">Create New Record</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Hobbies</th>
                        <th>Gender</th>
                        <th>City</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% records.forEach(record => { %>
                        <tr>
                            <td>
                                <% if(record.image) { %>
                                    <img src="/uploads/<%= record.image %>" alt="Profile" style="width: 50px; height: 50px; object-fit: cover;">
                                <% } else { %>
                                    <span>No Image</span>
                                <% } %>
                            </td>
                            <td><%= record.name %></td>
                            <td><%= record.email %></td>
                            <td><%= record.hobbies.join(', ') %></td>
                            <td><%= record.gender %></td>
                            <td><%= record.city %></td>
                            <td>
                                <a href="/edit/<%= record._id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/delete/<%= record._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>